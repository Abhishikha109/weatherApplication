
{
  "extends": [
    "plugin:react/recommended"
  ],
  "plugins": ["react", "import", "jsx-a11y", "unused-imports", "sequence"],
  "rules": {
    "react/prop-types": 0,
    "indent": ["error", 2],
    "linebreak-style": 1,
    "react/react-in-jsx-scope": "off",
    "quotes": ["error", "single"],
    "unused-imports/no-unused-imports": "error",
    "sequence/ordered-imports-by-path": [
      "error", {
        "ignoreCase": true,
        "sortSideEffectsFirst": true,
        "allowSeparateGroups": true,
        "sortTypeImportsFirst": true
      }
    ]
  },
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}